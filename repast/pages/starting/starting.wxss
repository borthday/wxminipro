/* pages/starting/starting.wxss */

.starting-wrap {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 170rpx;
}

.starting-wrap image {
  width: 134rpx;
  height: 120rpx;
  display: block;
  margin-bottom: 34rpx;
}

.start-title .tlt:first-child, .start-title .tlt:last-child {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 50rpx;
  font-size: 48rpx;
  color: #1e1e1e;
}
.start-title .tlt:last-child{
  animation: loading 1.5s infinite forwards;
  overflow-y: hidden;
}
.start-title .tlt:last-child text {
  width: 15rpx;
  height: 15rpx;
  display: flex;
  background: #b5b5b5;
  border-radius: 50%;
  margin-top: 20rpx;
}

@keyframes loading {
  0% {
    height: 0rpx;
  }

  33% {
    height: 35rpx;
  }

  66% {
    height: 70rpx;
  }

  100% {
    height: 120rpx;
  }
}
