/* pages/contactUs/contactUs.wxss */
.contact-wrap{
  padding: 30rpx;
  background: #f5f5f5;
  box-sizing: border-box;
}
.contact-content .banner{
  height: 392rpx;
  margin-bottom: 30rpx;
}
.contact-content .banner image{
  display: block;
  width: 100%;
  height: 100%;
}
.info-contain{
  background: white;
  padding: 30rpx;
  border-radius: 8rpx;
}
.info-contain .map{
   margin-bottom: 37rpx;
}
.phone,.address{
  margin-bottom: 40rpx;
}
.phone view:first-child,.address view:first-child,.mail view:first-child{
  font-size: 30rpx;
  color: #1e1e1e;
  margin-bottom: 20rpx;
}
.phone view:last-child,.address view:last-child,.mail view:last-child{
  font-size: 26rpx;
  color: #666;
}