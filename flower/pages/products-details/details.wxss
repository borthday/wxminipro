/* pages/products-details/details.wxss */
@import "../../static/icon/icon.wxss";
.details{
  border-top: 1rpx solid silver;
}
.title{
  margin: 10rpx 20rpx;
  font-size: 24rpx;
  font-weight: 700;
}
image{
  width: 100%
}
.banner{
  position: relative
}
.describe{
  width: 100%;
  position: absolute;
  bottom: 10rpx;
  background: #AEAEAE;
  color: #000;
  padding: 10rpx 20rpx;
  font-size: 20rpx;
  opacity: .7;
}
.text .text1{
  border-bottom:1rpx solid #999;
  font-size: 24rpx;
  color: #666;
  padding: 20rpx;
}
.text .content{
  margin-top: 20rpx;
  font-size: 22rpx;
  color: #666;
}
.min-img{
  display: flex;
  justify-content: space-between;
  margin-top:-5px;
  background: #f4f4f4;
}
.min-img image {
  margin: 20rpx;
  height: 90rpx;
  flex: 1;
}
.tel{
  width: 100%;
  position: fixed;
  bottom: 0;
  font-size: 22rpx;
  text-align: center;
  background:#F7F7FA;
  color:#999;
}
.tel view{
  margin-top: 5rpx;
}
